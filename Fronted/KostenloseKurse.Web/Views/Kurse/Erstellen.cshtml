
@{
    ViewData["Title"] = "Erstellen";
}
@model KursEingabeErstellen
<div class="row">
    <div class="col-md-8 offset-md-2">

        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Kurs Hinzufügen </h5>

                <form asp-controller="Kurse" asp-action="Erstellen" method="post" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="mb-3">
                        <label for="exampleFormControlInput1" class="form-label" asp-for="KategorieID"></label>
                        <select asp-for="KategorieID" class="form-control" asp-items="@ViewBag.kategorieListe">
                            <option value="">Kategorie Auswählen</option>
                        </select>

                        <span class="text-danger" asp-validation-for="KategorieID"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Name" class="form-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span class="text-danger" asp-validation-for="Name"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Preis" class="form-label"></label>
                        <input asp-for="Preis" class="form-control" />
                        <span class="text-danger" asp-validation-for="Preis"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Bezeichnung" class="form-label"></label>
                        <textarea asp-for="Bezeichnung" class="form-control"></textarea>
                        <span class="text-danger" asp-validation-for="Bezeichnung"></span>
                    </div>

                    <div class="mb-3">
                        <label asp-for="Eigenschaft.Dauer" class="form-label"></label>
                        <input asp-for="Eigenschaft.Dauer" class="form-control" />
                        <span class="text-danger" asp-validation-for="Eigenschaft.Dauer"></span>
                    </div>

                    <div class="mb-3">

                        <label class="form-label" asp-for="PhotoFormFile"></label>

                        <input type="file" asp-for="PhotoFormFile" class="form-control" />
                    </div>

                    <button type="submit" class="btn btn-success">Kurs Hinzufügen</button>
                </form>
            </div>
        </div>
    </div>
</div>

