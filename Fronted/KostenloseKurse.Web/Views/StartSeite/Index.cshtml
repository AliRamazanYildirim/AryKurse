@{
    ViewData["Title"] = "StartSeite";
    var count=0;
}
@model List<KursViewModell>
<h2>Kurse</h2>
<hr />

@if (Model.Any())

{

    @foreach (var item in Model)
    {
        count++;
        if (count == 1 || (count % 3 == 1))
        {
            @Html.Raw("<div class='row row-cols-1 row-cols-md-3 g-4 mb-2' >")
        }
        <div class="col">
            <div class="card">
                <img src="@item.FotoBestandUrl" class="card-img-top" alt="...">
                <div class="card-body">
                    <h5 class="card-title">@item.Name</h5>
                    <div class="badge bg-primary">Kategorie : @item.Kategorie.Name</div>
                    <p class="card-text">@item.KurzeBezeichnung</p>
                    <h4 class="text-primary">@item.Preis €</h4>

                    <div>
                        <a asp-controller="StartSeite" asp-action="Einzelheit" class="btn btn-success" asp-route-id="@item.ID">Einzelheit</a>
                    </div>
                </div>
            </div>
        </div>

        if (count % 3 == 0)
        {
            @Html.Raw("</div>")
        }

    }
}