
@{
    ViewData["Title"] = "Einloggen";
}
@model KostenloseKurse.Web.Models.EingabeAnmelden

<div class="row">

    <div class="col-md-4 offset-md-4">
        <div class="card">

            <div class="card-body">

                <h5 class="card-title">Login für Mitglieder</h5>
                <div class="text-danger" asp-validation-summary="ModelOnly"></div>
                <form asp-controller="Auth" asp-action="Einloggen" method="post">
                    <div class="mb-3">
                        <label asp-for="Email" for="exampleInputEmail1" class="form-label"></label>
                        <input type="email" value="steinschwarz29@gmail.com" asp-for="Email" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp">
                        <span class="text-danger" asp-validation-for="Email"></span>
                    </div>
                    <div class="mb-3">
                        <label asp-for="Passwort" for="exampleInputPassword1" class="form-label"></label>
                        <input type="password" value="Admin123456." asp-for="Passwort" class="form-control" id="exampleInputPassword1">
                        <span class="text-danger" asp-validation-for="Passwort"></span>
                    </div>
                    <div class="mb-3 form-check">
                        <input type="checkbox" asp-for="ErinnereMich" class="form-check-input" id="exampleCheck1">
                        <label asp-for="ErinnereMich" class="form-check-label" for="exampleCheck1"></label>
                    </div>
                    <button type="submit" class="btn btn-primary">Einloggen</button>
                </form>
            </div>
        </div>
    </div>
</div>
